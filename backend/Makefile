.PHONY: deploy-files

deploy-files:
	@echo "Copying files to VPS..."
	@rsync -av --progress \
		--exclude 'target' \
		--exclude '.git' \
		--exclude '.gitignore' \
		--exclude '.env' \
		./ vps:/var/www/amirsalarsafaeibackend/
	@rsync -av --progress \
		--exclude 'target' \
		--exclude '.git' \
		--exclude '.gitignore' \
		--exclude '.env' \
		../autogenerated vps:/var/www
	@echo "Files copied successfully!"
